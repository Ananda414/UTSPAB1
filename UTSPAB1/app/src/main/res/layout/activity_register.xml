<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".Register">

    <TextView
        android:id="@+id/tv_register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:layout_marginTop="132dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        app:layout_constraintTop_toBottomOf="@id/tv_register_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="Full Name"
        android:background=""
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="City"
        android:background=""
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="Full Name"
        android:background=""
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_birth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_city"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="Date of Birth"
        android:background=""
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_birth"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="Email"
        android:background=""
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:drawableStart=""
        android:drawableTint="#2E7D32"
        android:hint="Password"
        android:background=""
        android:backgroundTint="#0D44B3"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_register"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="sans-serif"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:backgroundTint="#7A3E93"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</RelativeLayout>>